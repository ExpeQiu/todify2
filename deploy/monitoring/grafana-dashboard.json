{
  "dashboard": {
    "title": "Todify3 系统监控",
    "tags": ["todify3", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP 请求率",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "请求/秒"
          }
        ],
        "xaxis": {
          "mode": "time"
        }
      },
      {
        "id": 2,
        "title": "HTTP 响应时间（P95）",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 - {{method}} {{route}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50 - {{method}} {{route}}",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99 - {{method}} {{route}}",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "响应时间（秒）"
          }
        ],
        "xaxis": {
          "mode": "time"
        }
      },
      {
        "id": 3,
        "title": "HTTP 错误率",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "rate(http_request_errors_total[5m]) / rate(http_requests_total[5m])",
            "legendFormat": "错误率 - {{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "label": "错误率"
          }
        ],
        "xaxis": {
          "mode": "time"
        }
      },
      {
        "id": 4,
        "title": "活跃连接数",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "http_active_connections",
            "legendFormat": "活跃连接",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "连接数"
          }
        ],
        "xaxis": {
          "mode": "time"
        }
      },
      {
        "id": 5,
        "title": "内存使用量",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "process_memory_usage_bytes{type=\"heap_used\"}",
            "legendFormat": "堆内存使用",
            "refId": "A"
          },
          {
            "expr": "process_memory_usage_bytes{type=\"heap_total\"}",
            "legendFormat": "堆内存总计",
            "refId": "B"
          },
          {
            "expr": "process_memory_usage_bytes{type=\"rss\"}",
            "legendFormat": "RSS",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "内存使用量"
          }
        ],
        "xaxis": {
          "mode": "time"
        }
      },
      {
        "id": 6,
        "title": "CPU 使用率",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "rate(nodejs_eventloop_lag_seconds[5m])",
            "legendFormat": "事件循环延迟",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "延迟（秒）"
          }
        ],
        "xaxis": {
          "mode": "time"
        }
      },
      {
        "id": 7,
        "title": "HTTP 状态码分布",
        "type": "piechart",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "targets": [
          {
            "expr": "sum by (status_code) (rate(http_requests_total[5m]))",
            "legendFormat": "{{status_code}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "慢请求统计",
        "type": "table",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "columns": [
          {
            "text": "路由",
            "value": "route"
          },
          {
            "text": "方法",
            "value": "method"
          },
          {
            "text": "P95 响应时间",
            "value": "Value"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}

